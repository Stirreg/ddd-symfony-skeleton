{
    "name": "stirreg/ddd-symfony-skeleton",
    "description": "A skeleton project that provides a basic architecture and packages, enabling you to use DDD with symfony straight away.",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.2.5",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "nelmio/cors-bundle": "^2.0",
        "ramsey/collection": "^1.0",
        "ramsey/uuid": "^3.9",
        "roave/security-advisories": "dev-master",
        "symfony/console": "5.0.*",
        "symfony/dotenv": "5.0.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.0.*",
        "symfony/security-bundle": "5.4.*",
        "symfony/yaml": "5.0.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^3.7"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Infrastructure\\Symfony\\": "src/Infrastructure/Symfony/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "src-dir": "src/Infrastructure/Symfony/src",
            "public-dir": "src/Infrastructure/Symfony/public",
            "allow-contrib": false,
            "require": "5.0.*"
        }
    }
}
